{
  "name": "marketplace-app",
  "version": "1.0.0",
  "description": "A modern marketplace application built with Next.js, TypeScript, and Tailwind CSS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:health": "node scripts/db-health-check.js",
    "db:setup": "./scripts/db-setup.sh",
    "db:clean": "prisma migrate reset --force",
    "db:fresh": "npm run db:clean && npm run db:migrate && npm run db:seed",
    "db:check": "prisma validate",
    "db:format": "prisma format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cli": "node src/lib/cli/index.js",
    "cli:product": "node src/lib/cli/product-management/cli.js",
    "cli:user": "node src/lib/cli/user-authentication/cli.js",
    "cli:payment": "node src/lib/cli/payment-processing/cli.js",
    "cli:image": "node src/lib/cli/image-handling/cli.js",
    "cli:notification": "node src/lib/cli/notification-system/cli.js"
  },
  "dependencies": {
    "@azure/identity": "^4.12.0",
    "@azure/storage-blob": "^12.28.0",
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@stripe/react-stripe-js": "^2.9.0",
    "@stripe/stripe-js": "^4.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^18.2.45",
    "autoprefixer": "^10.4.16",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "clsx": "^2.0.0",
    "cssnano": "^7.1.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.4",
    "next-auth": "^4.24.5",
    "postcss-preset-env": "^10.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.4",
    "stripe": "^14.9.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "tsx": "^4.20.6"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
