{
  "name": "invoice-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "node dist-api/api/server.cjs",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "tsc -b && vite build",
    "build:api": "npx tsc -p tsconfig.api.json && find dist-api -name \"*.js\" -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
    "vercel-build": "npm run build",
    "start": "node dist-api/api/server.cjs",
    "build:cli": "tsc -b && chmod +x bin/invoice-cli.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "test:e2e": "playwright test",
    "test:contracts": "jest --testPathPatterns=tests/contracts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contracts",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:all && npm run test:e2e",
    "contract:test": "dredd api-spec.yaml http://localhost:3000/api/v1",
    "lint:fix": "eslint . --fix",
    "cli": "node src/cli/index.ts",
    "cli:calculate": "npm run cli calculate",
    "cli:validate": "npm run cli validate",
    "cli:format": "npm run cli format",
    "cli:generate": "npm run cli generate"
  },
  "bin": {
    "invoice-cli": "./bin/invoice-cli.js"
  },
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/react-router-dom": "^5.3.3",
    "archiver": "^7.0.1",
    "commander": "^14.0.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jspdf": "^3.0.3",
    "morgan": "^1.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "dredd": "^14.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "mongodb-memory-server": "^10.2.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "yaml": "^2.8.1"
  }
}
