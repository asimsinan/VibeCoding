# Production Environment Configuration Example
# Copy this to .env.production and update with your actual values

NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.moodtracker.app
NEXT_PUBLIC_WS_URL=wss://api.moodtracker.app/ws

# Database Configuration
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=moodtracker_prod
POSTGRES_USER=moodtracker_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_SSL=true

# Security
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://moodtracker.app

# Monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
