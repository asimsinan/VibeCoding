{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "required": ["id", "name", "price", "category", "brand", "availability"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "Unique product identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Product name"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Product description"
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Product price"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Product category"
    },
    "brand": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Product brand"
    },
    "imageUrl": {
      "type": "string",
      "format": "uri",
      "description": "Product image URL"
    },
    "availability": {
      "type": "boolean",
      "description": "Product availability"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Product creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Product last update timestamp"
    }
  },
  "additionalProperties": false
}
